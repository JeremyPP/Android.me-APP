<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.ndroidme.AboutPage"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:weightSum="1">
    <ImageView  android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:id="@+id/about_image"/>
<RelativeLayout
     android:layout_width="match_parent"
    android:layout_height="wrap_content"



    android:orientation="vertical"

    android:background="@color/white"
    android:fitsSystemWindows="false"
    android:clickable="false"
    android:layout_marginBottom="20dp"

    >





    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/designer"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:id="@+id/designer"


        android:clickable="true"
        android:onClick="openWeb"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/developer"
        android:layout_below="@id/designer"
       android:layout_centerHorizontal="true"
        android:id="@+id/developer"
        android:inputType="none"
        android:textStyle="normal"
        android:visibility="visible"
        android:enabled="true"
        android:clickable="true"
        android:onClick="openWeb"
        android:textSize="20sp"
        />
    <View android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/divider"
        android:layout_below="@id/developer"/>
        <!--<TextView
            android:id="@+id/libraries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/libraries"
            android:textSize="20sp"
            android:layout_below="@+id/developer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />-->
        <TextView

            android:layout_centerHorizontal="true"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etsy"
            android:clickable="true"
            android:onClick="openWeb"
            android:textSize="20sp"
            android:text="@string/etsy"
            android:layout_below="@id/divider"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@id/etsy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/universal"
            android:clickable="true"
            android:onClick="openWeb"
            android:textSize="20sp"
            android:text="@string/universal"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinning_progress_bar"
            android:clickable="true"
            android:onClick="openWeb"
            android:textSize="20sp"
            android:text="@string/spinning_google_bar"
            android:layout_below="@id/universal"
            android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/thank_you"
        android:text="@string/thank_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@id/spinning_progress_bar"/>

</RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/copyright"

        android:textSize="12sp"
        android:singleLine="false"
        android:gravity="center|bottom"
        android:layout_weight="0.97"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>

