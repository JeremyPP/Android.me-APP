<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 19+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 19+ devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- API 19 theme customizations can go here. -->
    	<item name="android:windowTranslucentNavigation">@bool/transparent_nav</item>
    	<item name="android:windowTranslucentStatus">true</item>
    	<item name="android:windowContentOverlay">@null</item>  
    	<item name="android:actionMenuTextColor">#ffffff</item>
    	<item name="android:homeAsUpIndicator">@drawable/ic_ab_back_holo_dark_am</item>
    </style>
    <style name="Theme.TranslucentActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowTranslucentNavigation">@bool/transparent_nav</item>
    	<item name="android:windowTranslucentStatus">true</item>
    	<item name="android:windowContentOverlay">@null</item>  
    	<item name="android:actionMenuTextColor">#ffffff</item>
    	<!--<item name="android:homeAsUpIndicator">@drawable/ic_ab_back_holo_dark_am</item>    -->
        <item name="android:actionBarStyle">@style/Widget.ActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/Overflow</item>
    </style>
    <style name="Widget.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
       <item name="android:titleTextStyle">@style/Widget.ActionBar.TextAppearance</item>
       
    </style>
    
    <style name="Overflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
       <item name="android:actionBarItemBackground">@drawable/ic_action_overflow</item>      
   </style>
    <style name="Widget.ActionBar.TextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
        
    </style>
    
</resources>
