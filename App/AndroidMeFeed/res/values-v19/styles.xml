<resources>

    <!--
        Base application theme for API 19+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 19+ devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light">
        API 19 theme customizations can go here.
    	<item name="android:windowTranslucentNavigation">@bool/transparent_nav</item>
    	<item name="android:windowTranslucentStatus">true</item>
    	<item name="android:windowContentOverlay">@null</item>  
    	<item name="android:actionMenuTextColor">#ffffff</item>
    	<item name="android:homeAsUpIndicator">@drawable/ic_ab_back_holo_dark_am</item>
    </style>
    <style name="Theme.TranslucentActionBar" parent="@android:style/Theme.Holo.Light">
    <item name="android:windowTranslucentNavigation">@bool/transparent_nav</item>
    	<item name="android:windowTranslucentStatus">true</item>
    	<item name="android:windowContentOverlay">@null</item>  
    	<item name="android:actionMenuTextColor">#ffffff</item>
    	<item name="android:homeAsUpIndicator">@drawable/ic_ab_back_holo_dark_am</item>    
    </style>
</resources>
